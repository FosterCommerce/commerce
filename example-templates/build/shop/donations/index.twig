{% extends 'shop/_private/layouts' %}

{% block main %}
    <!-- Template: {{ _self }}.twig -->
    <h1 class="text-3xl block sm:inline">Donation</h1>

    {% set donation = craft.commerce.donation %}
    {% if donation and donation.isAvailable %}
        <form method="post" action="" class="pt-2 pb-8">
            {{ actionInput('commerce/cart/update-cart') }}
            {{ hiddenInput('successMessage', 'Donation added.'|hash) }}
            {{ redirectInput('shop/cart') }}
            {{ hiddenInput('purchasableId', craft.commerce.donation.id) }}
            {{ csrfInput() }}

            <div>
                <label for="donation-amount">Enter a donation amount e.g. 10, 15, 20</label>
            </div>
            <div>
                <input id="donation-amount" class="border border-gray-300 hover:border-gray-500 px-4 py-2 leading-tight rounded" type="text" name="options[donationAmount]"
                       value="" placeholder="10">
            </div>
            <div class="mt-3">
                <input class="cursor-pointer rounded px-4 py-2 inline-block bg-blue-500 hover:bg-blue-600 text-white hover:text-white" type="submit" value="Add Donation"/>
            </div>
        </form>
    {% else %}
        <h2 class="text-lg font-semibold text-gray-600 mt-4">No donation set up</h2>
    {% endif %}
{% endblock %}