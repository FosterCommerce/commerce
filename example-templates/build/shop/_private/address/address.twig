<!-- Template: {{ _self }}.twig -->
{#
Prints the lines of an address, bolding lines with keys in the `boldKeys` array.

@var address \craft\commerce\models\Address
#}
{% set boldKeys = ['attention', 'name', 'businessName'] %}
<ul>
  {% for key, line in address.addressLines %}
    <li>
      {{ tag(key in boldKeys ? 'strong' : 'span', {
        text: key == 'attention' ? 'Attn'|t ~ ': ' ~ line : line
      }) }}
    </li>
  {% endfor %}
</ul>
