{% if currentUser %}
    {% redirect 'shop/checkout/addresses' %}
{% endif %}

{% extends 'shop/_private/layouts' %}

{% block main %}
    <!-- Template: {{ _self }}.twig -->
    <h1 class="text-xl font-bold">Letâ€™s grab your email to get started</h1>

    <div class="flex -mx-8 mt-6">
        <div class="w-full max-w-xl px-8">
            <form method="post" action="">
                {{ actionInput('commerce/cart/update-cart') }}
                {{ redirectInput('shop/checkout/register-signin') }}
                {{ csrfInput() }}

                <div class="field">
                    <label for="email">Email</label>
                    <input id="email" class="w-full border border-gray-300 hover:border-gray-500 px-4 py-2 leading-tight rounded" type="text" value="{{ cart.email }}"
                           name="email"
                           placeholder="email@site.com"/>
                </div>

                <div class="mt-3">
                    <input type="submit" value="Continue" class="cursor-pointer rounded px-4 py-2 inline-block bg-blue-500 hover:bg-blue-600 text-white hover:text-white"/>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
