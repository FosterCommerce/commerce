<!-- Template: {{ _self }}.twig -->
{% if showShippingAddress is not defined %}
  {% set showShippingAddress = false %}
{% endif %}

{% if showShippingMethod is not defined %}
  {% set showShippingMethod = false %}
{% endif %}

<div class="[[classes.box.base]]">
  <h3 class="mt-0 text-lg font-bold">
    {{- 'Order Review'|t -}}
  </h3>

  {% if showShippingAddress %}
    <div class="border-b border-gray-300 pb-3">

      <h4 class="font-semibold mt-3">
        {{- 'Shipping to'|t -}}
      </h4>
      {% if cart.shippingAddress %}
        <div class="js-address-select border-0">
          {{ include('[[folderName]]/_private/address/address',
            { 'address': cart.shippingAddress }
          ) }}
        </div>
      {% else %}
        <p>{{ 'No shipping address selected.'|t }}</p>
      {% endif %}

      <a href="{{ url('/[[folderName]]/checkout/addresses') }}" class="[[classes.a]]">
        {{ 'Change'|t }}
      </a>
    </div>
  {% endif %}

  {% if showShippingMethod %}
    <div class="border-b border-gray-300 pb-3">
      <h4 class="font-semibold mt-3">
        {{- 'Shipping method'|t -}}
      </h4>

      <div>
        {{ cart.shippingMethodName ?: 'No shipping method selected.'|t }}
      </div>
    </div>
  {% endif %}

  <h4 class="font-semibold mt-3">
    {{ 'Items'|t }}
  </h4>
  {% for item in cart.lineItems %}
    <div class="flex w-full justify-between">
      <div class="flex justify-between mr-3 overflow-hidden items-center">
        <div class="truncate">
          {{ item.description }}
        </div>
        <div class="text-gray-500 text-xs uppercase">{% if item.qty %}&times;{{ item.qty }}{% endif %}</div>
      </div>
      <div>
        {{ item.subtotal|currency(cart.currency) }}
      </div>
    </div>
  {% else %}
    <div class="mb-3">
      <p>
        {{ 'Nothing in your cart yet, <a href="{url}" class="{anchorClasses}">add something</a>.'|t('site', {
          url: url('/[[folderName]]/products'),
          anchorClasses: '[[classes.a]]'
        }) }}
      </p>
    </div>
  {% endfor %}

  {% if not cart.shippingMethod %}
    <div class="border-b border-gray-300 pb-3">
      <strong>{{ 'Shipping'|t }}</strong> {{ 'None selected.'|t }}
      <a href="{{ url('/[[folderName]]/checkout/shipping') }}" class="[[classes.a]]">
        {{- 'Choose a shipping method.'|t -}}
      </a>
    </div>
  {% endif %}

  <div class="mt-3 pt-3 border-t border-gray-300">
    <div class="flex w-full justify-end items-center text-xs text-gray-500">
      <div class="pr-2">
        {{ 'Shipping'|t }}:
      </div>
      <div>
        {{ cart.totalShippingCost|totalAsCurrency }}
      </div>
    </div>
    <div class="flex w-full justify-end items-center text-xs text-gray-500">
      <div class="pr-2">
        {{ 'Tax'|t }}:
      </div>
      <div>
        {{ cart.totalTax|totalAsCurrency }}
      </div>
    </div>
    <div class="flex w-full justify-end items-center text-xs text-gray-500">
      <div class="pr-2">
        {{ 'Tax (inc)'|t }}:
      </div>
      <div>
        {{ cart.totalTaxIncluded|commerceCurrency(cart.currency) }}
      </div>
    </div>
    <div class="flex w-full justify-end items-center text-xs text-gray-500">
      <div class="pr-2">
        {{ 'Discount'|t }}:
      </div>
      <div>
        {{ (cart.totalDiscount * -1)|commerceCurrency(cart.currency) }}
      </div>
    </div>
    <div class="flex w-full justify-end items-center">
      <div class="text-gray-600 pr-2">
        {{ 'Total'|t }}:
      </div>
      <div class="text-lg font-bold">
        {{ cart.totalPrice|commerceCurrency(cart.currency) }}
      </div>
    </div>
  </div>
  {% if cart.currency != cart.paymentCurrency and cart.totalPrice == cart.getOutstandingBalance() %}
    <div class="mt-1 flex w-full justify-end">
      <div class="text-gray-600 pr-2">
        {{ 'Payment'|t }} {{ cart.paymentCurrency }}:
      </div>
      <div>
        {{ cart.totalPrice|commerceCurrency(cart.paymentCurrency,convert=true) }}
      </div>
    </div>
  {% endif %}
  {% if cart.hasOutstandingBalance and cart.totalPrice != cart.getOutstandingBalance() %}
    <div class="mt-1 flex w-full justify-end">
      <div class="text-gray-600 pr-2">
        {{ 'Outstanding Balance'|t }} {{ cart.paymentCurrency }}:
      </div>
      <div>
        {{ cart.outstandingBalance|commerceCurrency(cart.paymentCurrency,convert=true) }}
      </div>
    </div>
  {% endif %}
</div>
