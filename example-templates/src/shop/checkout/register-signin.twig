{% if currentUser %}
    {% redirect '[[folderName]]/checkout/addresses' %}
{% endif %}

{% extends '[[folderName]]/_layouts/main' %}

{% block main %}
    <!-- Template: {{ _self }}.twig -->
    {% if not cart.email %}
        {% redirect '[[folderName]]/checkout' %}
    {% endif %}

    {# Does a user exist with this email address? #}
    {% set userExistsButCantLogin = craft.users.email(cart.email).status(['locked','suspended','pending']).one() %}

    {% if userExistsButCantLogin %}
        {% redirect '[[folderName]]/checkout/addresses' %}
    {% endif %}

    {% set userExists = craft.users.email(cart.email).one() %}

    <h1 class="text-xl font-bold">Account</h1>

    <div class="flex -mx-8 pt-8">
        <div class="w-1/2 pl-8">
            <div class="[[classes.box.base]]">

                {% if userExists %}
                    <h2 class="mt-0 text-lg font-bold">Sign In</h2>

                    <form method="post" action="" accept-charset="UTF-8">
                        {{ csrfInput() }}
                        {{ actionInput('users/login') }}
                        {{ redirectInput('[[folderName]]/checkout/addresses') }}

                        <div class="field mt-3">
                            <label for="loginName" class="block text-sm font-medium text-gray-700">
                                Email
                            </label>
                            <div class="mt-1">
                                <input id="loginName" placeholder="email@site.com" type="text"
                                       value="{{ craft.app.user.getRememberedUsername() }}" required
                                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[[color]]-500 focus:border-[[color]]-500 sm:text-sm">
                            </div>
                        </div>

                        <div class="field mt-3">
                            <label for="loginPassword">Password</label>
                            <input id="loginPassword" class="[[classes.input]] mt-1 w-full" type="password"
                                   name="password">
                        </div>

                        <div class="field mt-3">
                            <label>
                                <input type="checkbox" name="rememberMe" value="1">
                                Remember me
                            </label>
                        </div>

                        <div class="mt-3 flex justify-between items-center">
                            <div>
                                <a href="{{ url('/[[folderName]]/customer/forgot-password') }}" class="[[classes.a]]">Forgot
                                    your password?</a>
                            </div>
                            <div>
                                <input type="submit" value="Login"
                                       class="[[classes.btn.base]] [[classes.btn.mainColor]]"/>
                            </div>
                        </div>
                    </form>
                {% else %}
                    <h2 class="mt-0 text-lg font-bold">Register</h2>

                    <form method="post" action="" accept-charset="UTF-8">
                        {{ csrfInput() }}
                        {{ actionInput('users/save-user') }}
                        {{ redirectInput('[[folderName]]/checkout/addresses') }}

                        {% macro errorList(errors) %}
                            {% if errors %}
                                <ul class="errors text-red-500">
                                    {% for error in errors %}
                                        <li>{{ error }}</li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        {% endmacro %}

                        {% from _self import errorList %}

                        <div class="field mt-3">
                            <label for="username">Username</label>
                            <input id="username" class="[[classes.input]]" type="text" name="username"
                                    {%- if user is defined %} value="{{ user.username }}"{% endif -%}>

                            {% if user is defined %}
                                {{ errorList(user.getErrors('username')) }}
                            {% endif %}
                        </div>

                        <div class="field mt-3">
                            <label for="email">Email</label>
                            <input id="email" class="[[classes.input]]" type="text" name="email"
                                    {%- if user is defined %} value="{{ user.email }}"{% endif %}
                                    {%- if user is not defined and cart.email %} value="{{ cart.email }}"{% endif %}>

                            {% if user is defined %}
                                {{ errorList(user.getErrors('email')) }}
                            {% endif %}
                        </div>

                        <div class="field mt-3">
                            <label for="savePassword">Password</label>
                            <input id="savePassword" class="[[classes.input]]" type="password" name="password">

                            {% if user is defined %}
                                {{ errorList(user.getErrors('password')) }}
                            {% endif %}
                        </div>

                        <div class="mt-3">
                            <input type="submit" value="Register"
                                   class="[[classes.btn.base]] [[classes.btn.mainColor]]"/>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
        <div class="w-1/2 px-8">
            <h2 class="mt-6 text-lg font-bold">Checkout</h2>
            <div class="mt-3">
                <a href="{{ url('/[[folderName]]/checkout/addresses') }}" class="[[classes.a]]">Or, just continue as
                    guest &rarr;</a>
            </div>
        </div>
    </div>
{% endblock %}
