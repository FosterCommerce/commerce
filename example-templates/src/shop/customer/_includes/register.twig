<form method="post" action="" accept-charset="UTF-8">
  {{ csrfInput() }}
  {{ actionInput('users/save-user') }}
  {{ redirectInput(redirectUrl) }}

  {% macro errorList(errors) %}
    {% if errors %}
      <ul class="errors text-red-500">
        {% for error in errors %}
          <li>{{ error }}</li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endmacro %}

  {% from _self import errorList %}

  <div class="field mt-3">
    <label for="username">{{ 'Username'|t }}</label>
    <div class="mt-1">
      <input type="text"
             id="username"
             name="username"
             value="{{ user is defined ? user.username : '' }}"
             class="[[classes.input]]"
      />
      {% if user is defined %}
        {{ errorList(user.getErrors('username')) }}
      {% endif %}
    </div>
  </div>

  <div class="field mt-3">
    <label for="email">{{ 'Email'|t }}</label>
    <div class="mt-1">
      <input type="text"
             id="email"
             name="email"
             class="[[classes.input]]"
             {%- if user is defined %} value="{{ user is defined ? user.email : '' }}"{% endif %}
             {%- if user is not defined and cart.email %} value="{{ cart.email }}"{% endif %}
      />
      {% if user is defined %}
        {{ errorList(user.getErrors('email')) }}
      {% endif %}
    </div>
  </div>

  <div class="field mt-3">
    <label for="savePassword">{{ 'Password'|t }}</label>
    <div class="mt-1">
      <input type="password"
             id="savePassword"
             class="[[classes.input]]"
             name="password"
      />
      {% if user is defined %}
        {{ errorList(user.getErrors('password')) }}
      {% endif %}
    </div>
  </div>

  <div class="mt-3">
    <button type="submit" class="[[classes.btn.base]] [[classes.btn.mainColor]]">
      {{- 'Register'|t -}}
    </button>
  </div>
</form>