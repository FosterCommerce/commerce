{% extends '[[folderName]]/_private/layouts' %}

{% set donation = craft.commerce.donation %}

{% block main %}
  <!-- Template: {{ _self }}.twig -->
  <h1 class="text-3xl block sm:inline">
    {{ 'Donation'|t }}
  </h1>

  {% if donation and donation.isAvailable %}
    <form method="post" action="" class="pt-2 pb-8">
      {{ csrfInput() }}
      {{ actionInput('commerce/cart/update-cart') }}
      {{ successMessageInput('Donation added.') }}
      {{ redirectInput('[[folderName]]/cart') }}
      {{ hiddenInput('purchasableId', craft.commerce.donation.id) }}

      <div>
        <label for="donation-amount">{{ 'Enter a donation amount e.g. 10, 15, 20'|t }}</label>
      </div>
      <div>
        <input type="text"
               name="options[donationAmount]"
               id="donation-amount"
               value="" placeholder="10"
               class="[[classes.input]]"
        />
      </div>
      <div class="mt-3">
        <button type="submit" class="[[classes.btn.base]] [[classes.btn.mainColor]]">
          {{- 'Add donation'|t -}}
        </button>
      </div>
    </form>
  {% else %}
    <h2 class="text-lg font-semibold text-gray-600 mt-4">{{ 'No donation set up.'|t }}</h2>
  {% endif %}
{% endblock %}